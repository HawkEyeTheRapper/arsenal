/* 🌌 Universal Layout */
body {
  margin: 0;
  font-family: 'Orbitron', sans-serif;
  background: url('/assets/images/Andromeda.jpg') no-repeat center center fixed;
  background-size: cover;
  color: #b4fb51;
}

/* 🧠 Typography Core */
main h1 {
  color: #ff5c1a;
  font-size: 1.8rem;
  font-weight: bold;
  text-align: center;
}
main h2, main h3 {
  color: #b4fb51;
  font-size: 1.5rem;
  font-weight: bold;
}
main p {
  font-size: 1.1rem;
  line-height: 1.6;
  color: #b4fb51;
  text-align: justify;
}

/* 🖼️ Header */
header {
  background-color: rgba(0, 0, 0, 0.7);
  padding: 1rem;
  border-bottom: 1px solid #b4fb51;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.logo-title {
  display: flex;
  align-items: center;
  gap: 0.75rem;
}

.symbol {
  height: 40px;
}

.site-title {
  font-size: 2rem;
  font-weight: bold;
  color: #b4fb51;
  margin: 0;
}

/* 🔗 Navigation */
nav ul {
  list-style: none;
  display: flex;
  gap: 1.5rem;
  margin: 0;
  padding: 0;
}
nav a {
  text-decoration: none;
  color: #ff5c1a;
  font-weight: bold;
}
nav a:hover {
  color: #b4fb51;
}

/* 📱 Hamburger Menu */
input[type="checkbox"] {
  display: none;
}
.menu-icon {
  cursor: pointer;
  font-size: 1.5rem;
  color: #b4fb51;
  margin-left: 1rem;
}

/* 🪐 Main Content */
main {
  background-color: rgba(0, 0, 0, 0.51);
  padding: 3rem 2rem;
  margin: 2rem auto;
  width: 85%;
  max-width: 900px;
  border-radius: 8px;
  text-align: center;
}

/* 📎 Content Links */
.content a {
  color: #00ff44;
  font-weight: bold;
  text-decoration: none;
}
.content a:hover {
  color: #ff5c1a;
}

/* 📦 Footer */
footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  color: #b4fb51;
  border-top: 1px solid #b4fb51;
  padding: 0.4rem 1rem;
  font-size: 0.85rem;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.symbol-footer {
  height: 40px;
}

.footer-text {
  text-align: right;
  line-height: 1.2;
}

/* 🌐 Responsive Design */
@media screen and (max-width: 768px) {
  nav ul {
    flex-direction: column;
    gap: 1rem;
  }

  .site-title {
    font-size: 1.5rem;
  }

  main {
    width: 95%;
    padding: 2rem 1rem;
  }

  footer {
    flex-direction: column;
    text-align: center;
  }

  .footer-text {
    text-align: center;
    margin-top: 0.5rem;
  }
}
